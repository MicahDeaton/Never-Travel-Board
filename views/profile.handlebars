<div class='row'>
  <div class='col-auto'>
    <h2 class="text-4xl font-bold p-2 bg-primary text-primary-content rounded-box w-fit">Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3 class="text-4xl font-bold p-2 bg-gray-200 rounded-box">Create a New Board:</h3>

    <form class='form new-board-form bg-gray-100 rounded-box'>
      <div class='form-group'>
        <label for='board-name'>board name:</label>
        <input class='form-input' type='text' id='board-name' name='board-name' />
      </div>
      <div class='form-group'>
        <label for='board-desc'>board description:</label>
        <textarea class='form-input' id='board-desc' name='board-desc'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  <div class="w-1/2">
    {{> boardlistpartial}}
  </div>
</div>

{{> locationpartial}}

<script src='/js/cdn.tailwindcss.com_3.3.5.js'></script>
<script src='/js/profile.js'></script>